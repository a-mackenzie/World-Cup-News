<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">@dimen/titleFontSize</item>
        <item name="android:textColor">@color/myDarkGrey</item>
    </style>

    <style name="dateFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">@dimen/dateFontSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="sectionFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">@dimen/dateFontSize</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="authorFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">@dimen/dateFontSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
